<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_music_sheet_music_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_menu_send"
            app:shapeAppearance="@style/RoundedStyle" />



<!--        <de.hdodenhof.circleimageview.CircleImageView-->
<!--            android:id="@+id/item_music_sheet_music_image"-->
<!--            android:layout_width="70dp"-->
<!--            android:layout_height="70dp"-->
<!--            android:src="@drawable/ic_menu_send" />-->

        <TextView
            android:id="@+id/item_music_sheet_music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@id/item_music_sheet_music_image"
            android:text="本地歌单"
            android:textColor="#383838"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_music_sheet_music_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_music_sheet_music_name"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toRightOf="@id/item_music_sheet_music_image"
            android:text="16首"
            android:textColor="@color/Gray"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>