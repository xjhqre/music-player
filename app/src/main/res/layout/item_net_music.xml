<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    app:cardElevation="0dp"
    app:contentPadding="10dp">


    <RelativeLayout
        android:id="@+id/musicItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 歌曲名称 -->
        <TextView
            android:id="@+id/item_net_music_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:maxLength="20"
            android:singleLine="true"
            android:text="青花瓷"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 作者名称 -->
        <TextView
            android:id="@+id/item_net_music_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_net_music_song"
            android:layout_alignStart="@id/item_net_music_song"
            android:layout_marginTop="10dp"
            android:maxLength="12"
            android:text="周杰伦"
            android:textColor="#888"
            android:textSize="14sp" />

        <!-- 分割线 -->
        <TextView
            android:id="@+id/item_net_music_line"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_alignTop="@id/item_net_music_singer"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/item_net_music_singer"
            android:background="#888" />

        <!-- 专辑名称 -->
        <TextView
            android:id="@+id/item_net_music_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_net_music_singer"
            android:layout_toRightOf="@id/item_net_music_line"
            android:ellipsize="end"
            android:maxLength="12"
            android:singleLine="true"
            android:text=""
            android:textColor="#888"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/item_net_music_heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_heart" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>
